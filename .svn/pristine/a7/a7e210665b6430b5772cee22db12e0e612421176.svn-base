<ul class="calendar_day">
    {% for apt in appointments %}
    <li class="appointment">
        <h2 class="name">{{ apt.name }}</h2>
        <h3 class="time">{{ apt.tstart | date:"g:i a" }} - {{ apt.tend | date:"g:i a" }}</h3>
        <p class="description">{{ apt.description }}</p>
        <ul class="attendees">
            {% for attendee in apt.attendees.all %}
            <li>{{ attendee.get_display_name }}</li>
            {% endfor %}
        </ul>
    </li>
    {% endfor %}
</ul>
